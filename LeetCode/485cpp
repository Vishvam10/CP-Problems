class Solution {
public:
    int findMaxConsecutiveOnes(vector<int>& arr) {
        int n = arr.size();
        int left = 0, ans = 0;

        for(int i = 0; i < n; i++) {
            if(arr[i] == 0) {
                left = i;
            } 
            ans = max(ans, i - left);
        }

        return ans;

    }
};